<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Find Your Roommate</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">
  <header class="bg-blue-600 text-white py-4">
    <div class="container mx-auto flex justify-between items-center px-4">
      <h1 class="text-2xl font-bold">FindYourRoommate</h1>
      <a href="/login" class="bg-white text-blue-600 px-4 py-2 rounded-lg shadow">Login/Signup</a>
    </div>
  </header>

  <main class="container mx-auto mt-8 px-4">
    <!-- Intro Section -->
    <section class="text-center">
      <h2 class="text-3xl font-bold mb-4">Welcome to FindYourRoommate!</h2>
      <p class="text-lg text-gray-700">We help you find rental properties and the perfect roommate to share a home with.</p>
    </section>

    <!-- Property Listings Section -->
    <section class="mt-10">
      <h3 class="text-2xl font-semibold mb-4">Available Properties</h3>
      <% if (properties.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% for (const property of properties) { %>
            <div class="bg-white shadow rounded-lg overflow-hidden">
              <img src="<%= property.images[0] %>" alt="Property Image" class="w-full h-48 object-cover" />
              <div class="p-4">
                <h4 class="text-xl font-bold"><%= property.title %></h4>
                <p class="text-gray-600"><%= property.description %></p>
                <a href="/property/<%= property._id %>" class="block mt-4 text-blue-600 font-semibold">View Details</a>
              </div>
            </div>
          <% } %>
        </div>
      <% } else { %>
        <p class="text-gray-600">No properties available at the moment. Check back soon!</p>
      <% } %>
    </section>

    <!-- Roommate Profiles Section -->
    <section class="mt-10">
      <h3 class="text-2xl font-semibold mb-4">Find Your Perfect Roommate</h3>
      <% if (roommates.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% for (const roommate of roommates) { %>
            <div class="bg-white shadow rounded-lg overflow-hidden">
              <img src="<%= roommate.image %>" alt="Profile Image" class="w-full h-48 object-cover" />
              <div class="p-4">
                <h4 class="text-xl font-bold"><%= roommate.name %></h4>
                <p class="text-gray-600">Looking for a home near <%= roommate.location %></p>
                <a href="/roommate/<%= roommate._id %>" class="block mt-4 text-blue-600 font-semibold">View Profile</a>
              </div>
            </div>
          <% } %>
        </div>
      <% } else { %>
        <p class="text-gray-600">No roommate profiles available at the moment. Check back soon!</p>
      <% } %>
    </section>
  </main>

  <footer class="bg-gray-800 text-white py-4 mt-10">
    <div class="text-center">Â© 2024 FindYourRoommate. All rights reserved.</div>
  </footer>
</body>
</html>
